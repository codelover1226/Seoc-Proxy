h6(class="mt-4 font-weight-bold") Languagetool params
    hr(class="mt-0 mb-2")
div(class="row mb")
    div(class="col-sm")
        label Domain:
        input(type="text" class="form-control" id="languagetool-domain" name="languagetool-domain"
            placeholder="Domain used to connect to the languagetool service" value=languagetoolDomain)
        if errors && errors['languagetool-domain']
            span(class="text-danger") #{errors['languagetool-domain']}
div(class="row mt-2")
    div(class="col-sm")
        label Username:
        input(type="text" class="form-control" id="languagetool-username" name="languagetool-username"
            value=languagetoolUsername)
        if errors && errors['languagetool-username']
            span(class="text-danger") #{errors['languagetool-username']}
    div(class="col-sm")
        label Password:
        input(type="text" class="form-control" id="languagetool-pwrd" name="languagetool-pwrd"
            value=languagetoolPassword)
        if errors && errors['languagetool-pwrd']
            span(class="text-danger") #{errors['languagetool-pwrd']}